<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AnnuaireTelephone</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AnnuaireTelephone.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

</head>
<body>
    <header>

<li class="nav-item">
    <a class="nav-link" asp-controller="Telephone" asp-action="Filtrer">Filtrer Numéros</a>
</li>


        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">AnnuaireTelephone</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">Annuaire Téléphone</a>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                <li class="nav-item">
                    <a class="nav-link" asp-controller="Client" asp-action="Create">Ajouter Client</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Client" asp-action="Index">Lister Clients</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Telephone" asp-action="Create">Ajouter Numéro</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Telephone" asp-action="Index">Lister Numéros</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Telephone" asp-action="Statistiques">Statistiques</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

<a asp-controller="Client" asp-action="Create">Ajouter Client</a>
<a asp-controller="Client" asp-action="Index">Lister Clients</a>
<a asp-controller="Telephone" asp-action="Create">Ajouter Téléphone</a>
<a asp-controller="Telephone" asp-action="Index">Lister Téléphones</a>
<a asp-controller="Telephone" asp-action="Statistiques">Statistiques</a>


    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - AnnuaireTelephone - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
